@model Note.Model.Notice;

<form class="form-horizontal" method="post" asp-controller="Notice" asp-action="Edit">
    <input type="hidden" asp-for="No" value="@Model.No" />
    <div class="container">
        <h2 class="text-center">공지사항 수정</h2>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Title" placeholder="제목을 입력하세요" value="@Model.Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <textarea class="form-control editor" asp-for="Content">@Model.Content</textarea>
            <span class="text-danger" asp-validation-for="Content"></span>
        </div>
        <div class="btn-group pull-right">
            <button type="submit" class="btn btn-primary">수정</button>
            <button type="button" class="btn btn-danger" asp-controller="Notice" asp-action="Index">취소</button>
        </div>
    </div>
</form>