@model Note.Model.Notice;

<form class="form-horizontal" method="post" asp-controller="Notice" asp-action="Add">
    <div class="container">
        <h2 class="text-center">공지사항 작성</h2>
        <div class="form-group">
            <input type="text" class="form-control" asp-for="Title" placeholder="제목을 입력하세요" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <textarea class="form-control editor" asp-for="Content" ></textarea>
            <span class="text-danger" asp-validation-for="Content"></span>
        </div>
        <div class="btn-group pull-right">
            <button type="submit" class="btn btn-primary">저장</button>
            <button type="button" class="btn btn-danger">취소</button>
        </div>
    </div>
</form>