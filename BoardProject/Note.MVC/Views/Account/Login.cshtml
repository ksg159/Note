@model Note.ViewModel.LoginViewModel;

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="row">
        <div class="col-md-9">
            <div class="form-group">
                <h4>아이디</h4>
                <input type="text" class="form-control" asp-for="UserId" placeholder="아이디를 입력하세요" />
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                <h4>비밀번호</h4>
                <input type="password" class="form-control" asp-for="Password" placeholder="비밀번호를 입력하세요" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary center-block">로그인</button>
            </div>
        </div>
    </div>
</form>
